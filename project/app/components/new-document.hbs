<div class="landing-container">
  <h2>Create a new Document, {{this.username}}</h2>

  <div class="title-and-save">
    <input
      type="text"
      class="title-input"
      placeholder="Document Title"
      value={{this.title}}
      {{on "input" this.updateTitle}}
    />

    <button type="button" class="save-button" {{on "click" this.submitForm}}>
      Save Document
    </button>
  </div>

  <div class="textarea-container">
    <textarea
      class="textarea"
      placeholder="Write your document here..."
      value={{this.content}}
      {{on "input" this.updateContent}}
    ></textarea>
  </div>
</div>

